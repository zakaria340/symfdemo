{% extends '::base.html.twig' %}
{% block body %}


  <div class="media">
         <section class="index tv">
      <h2><a href="/movie/now-playing?language=en">ON TV</a></h2>
      {% for key,tv in firstTvs %}
        <div class="info {{ key == 0 ? 'first' : key == 1 ? 'second' : 'third' }}">
          {% if key == 0 %}
            <a href="/movie/246655-x-men-apocalypse?language=en">
              <img alt="{{tv.name}}" data-src="https://image.tmdb.org/t/p/w500_and_h281_bestv2{{ tv.backdrop_path }}" class="backdrop lazyloaded" src="https://image.tmdb.org/t/p/w500_and_h281_bestv2{{ tv.backdrop_path }}">
            </a>
            <span>
              <a href="/movie/246655-x-men-apocalypse?language=en">
                <img alt="{{tv.name}}" data-srcset="https://image.tmdb.org/t/p/w500_and_h281_bestv2{{ tv.poster_path }}" data-src="https://image.tmdb.org/t/p/w500_and_h281_bestv2{{ tv.poster_path }}" class="poster lazyloaded" srcset="https://image.tmdb.org/t/p/w500_and_h281_bestv2{{ tv.poster_path }}" src="https://image.tmdb.org/t/p/w500_and_h281_bestv2{{ tv.poster_path }}">
              </a>
              <div class="content">
                <a href="/movie/246655-x-men-apocalypse?language=en" class="text">
                  <h3>{{tv.name}}</h3>
                  <p>{{tv.overview}}</p>
                </a>
              </div>
            </span>
          {% else %}
            <a href="/tv/1411?language=en">
              <img alt="{{tv.name}}" data-src="https://image.tmdb.org/t/p/w500_and_h281_bestv2{{ tv.backdrop_path }}" class="backdrop lazyloaded" src="https://image.tmdb.org/t/p/w500_and_h281_bestv2{{ tv.backdrop_path }}">
            </a>
            <span>
              <a class="text" href="/tv/1411?language=en">
                <h3>{{tv.name}}</h3>
              </a>
              <a class="text" alt="{{tv.name}}" title="{{tv.name}}" href="/tv/1411/season/5/episode/12?language=en">
                <p>{{tv.overview}}</p>
              </a>
            </span>
          {% endif %}
        </div>
      {% endfor %}
    </section>
    <section class="index movie">
      <h2><a href="/movie/now-playing?language=en">In Theaters</a></h2>
      {% for key,movie in firstMovies %}
        <div class="info {{ key == 0 ? 'second' : key == 1 ? 'third' : 'first' }}">
          {% if key == 0 %}
            <a href="/movie/246655-x-men-apocalypse?language=en">
              <img alt="{{movie.title}}" data-src="https://image.tmdb.org/t/p/w500_and_h281_bestv2{{ movie.backdrop_path }}" class="backdrop lazyloaded" src="https://image.tmdb.org/t/p/w500_and_h281_bestv2{{ movie.backdrop_path }}">
            </a>
            <span>
              <a href="/movie/246655-x-men-apocalypse?language=en">
                <img alt="{{movie.title}}" data-srcset="https://image.tmdb.org/t/p/w500_and_h281_bestv2{{ movie.poster_path }}" data-src="https://image.tmdb.org/t/p/w500_and_h281_bestv2{{ movie.poster_path }}" class="poster lazyloaded" srcset="https://image.tmdb.org/t/p/w500_and_h281_bestv2{{ movie.poster_path }}" src="https://image.tmdb.org/t/p/w500_and_h281_bestv2{{ movie.poster_path }}">
              </a>
              <div class="content">
                <a href="/movie/246655-x-men-apocalypse?language=en" class="text">
                  <h3>{{movie.title}}</h3>
                  <p>{{movie.overview}}</p>
                </a>
              </div>
            </span>
          {% else %}
            <a href="/tv/1411?language=en">
              <img alt="{{movie.title}}" data-src="https://image.tmdb.org/t/p/w500_and_h281_bestv2{{ movie.backdrop_path }}" class="backdrop lazyloaded" src="https://image.tmdb.org/t/p/w500_and_h281_bestv2{{ movie.backdrop_path }}">
            </a>
            <span>
              <a class="text" href="/tv/1411?language=en">
                <h3>{{movie.title}}</h3>
              </a>
              <a class="text" alt="{{movie.title}}" title="{{movie.title}}" href="/tv/1411/season/5/episode/12?language=en">
                <p>{{movie.overview}}</p>
              </a>
            </span>
          {% endif %}
        </div>
      {% endfor %}
    </section>
  
  </div>
{% endblock %}
